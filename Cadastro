package trabalho3;

public class Funcionario {

    private Funcionario[] Funcionarios;
    private String nome;
    private String cpf;
    private double valorHoraTrabalhada;
    private double cargaHorariaSemanal;
    private boolean temFilho;

    public Funcionario(String nome, String cpf, double d, double cargaHorariaSemanal2, boolean temFilho) {
        this.nome = nome;
        this.cpf = cpf;
        this.valorHoraTrabalhada = d;
        this.cargaHorariaSemanal = cargaHorariaSemanal2;
        this.temFilho = temFilho;

        if (cargaHorariaSemanal2 > 44){
            cargaHorariaSemanal2 = 44;
        }
    }

    public String getNome() {
        return nome;
    }

    public double getCargaHorariaSemanal() {
        return cargaHorariaSemanal;
    }

    public void setCargaHorariaSemanal(Double horaSemanal){
        this.cargaHorariaSemanal = horaSemanal;
    }

    public double getValorHoraTrabalhada() {
        return valorHoraTrabalhada;
    }

    public void setValorHoraTrabalhada(Double valorHora){
        this.valorHoraTrabalhada = valorHora;
    }
    public String getCpf() {
        return cpf;
    }

    public boolean isFilhos(){
        return temFilho;
    }

    public double salarioFuncionario(){
        double salario = cargaHorariaSemanal * valorHoraTrabalhada;
        return salario;
    }
    
    @Override
    public String toString() {
        return "Funcionario{" +
                "nome='" + nome + '\'' +
                ", cpf='" + cpf + '\'' +
                ", valorHoraTrabalhada=" + valorHoraTrabalhada +
                ", cargaHorariaSemanal=" + cargaHorariaSemanal +
                ", temFilho=" + temFilho +
                '}';
    }
}
